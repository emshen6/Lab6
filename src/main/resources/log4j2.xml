<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="[%-5level] %d{HH:mm:ss.SSS} %logger{36} %t - %msg%n"/>
        </Console>

        <File name="File" fileName="logs\app.log">
            <PatternLayout pattern="[%-5level] %d{HH:mm:ss.SSS} %logger{36} %t - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>